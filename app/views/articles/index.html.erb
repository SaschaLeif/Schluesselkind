<div id="brand_list">

	<h1>Artikel</h1>

	<table>
		<% @articles.each do |article| %>
		<tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
			<td><%= image_tag(article.article_url, :class => 'list_image') %></td>
			<td> Name: <%= article.name %>
			<br />
			Größe: <%= article.size.name %>
			<br />
			Farbe: <%= article.color.name %></td>

			<td id="klein"> <%= link_to 'zeige', article %>
			<br />
			<%= link_to 'editiere', edit_article_path(article) %>
			<br />
			<%= link_to 'lösche', article, :data => {:confirm => 'Bist du sicher?'}, method: :delete %> </td>
		</tr>
		<% end %>
	</table>

	<br />
	<div id="klein">
		<%= link_to 'Neuer Artikel', new_article_path %>
	</div>
</div>