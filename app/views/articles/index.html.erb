<div id="brand_list">

	<h1>Artikel</h1>

	<table>
		<% @articles.each do |article| %>
		<tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
			<td><%= image_tag(article.article_url, :class => 'list_image') %></td>
			<td> Name: <%= article.name %>
			<br />
			Größe: <%= article.size.name %>
			<br />
			Farbe: <%= article.color.name %></td>

			<td class="list_actions"> <%= link_to 'zeige', article %>
			<br />
			<%= link_to 'editiere', edit_article_path(article) %>
			<br />
			<%= link_to 'lösche', article, confirm: 'Are you sure?', method: :delete %> </td>
		</tr>
		<% end %>
	</table>

	<br />

	<%= link_to 'Neuer Artikel', new_article_path %>
</div>