<%= form_for(@brand) do |f| %>

<% if @brand.errors.any? %>
<div id="error_explanation">
	<h2><%= pluralize(@brand.errors.count, "error") %> prohibited this brand from being saved:</h2>

	<ul>
		<% @brand.errors.full_messages.each do |msg| %>
		<li>
			<%= msg %>
		</li>
		<% end %>
	</ul>
</div>
<% end %>

<div id="gross">
	<div class="field">
		<%= f.label 'Hersteller: ' %>
		<%= f.text_field :name %>
	</div>
	<div class="field">
		<%= f.label 'Herkunft:'%>
		<%= f.text_field :origin %>
	</div>
	<div class="field">
		<%= f.label 'Logo-url:' %>
		<%= f.text_field :logo_url %>
	</div>
	<div class="field">
		<%= f.label "Fair-Trade Rating:" %>
		<%= f.text_field :rating %>
	</div>
	<div class="field">
		<%= f.label 'Infos:' %>
		<br />
		<%= f.text_area :info_text, :size=>"70x30" %>
	</div>
	<div class="actions">
		<%= f.submit %>
	</div>
</div>
<% end %>
