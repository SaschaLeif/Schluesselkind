<div align="right">
	<table>
		<tr>
			<% if session[:user_id] %>
			<%= button_to 'Logout', logout_path, :method => :delete, :data => {:confirm => 'Bist du sicher?'} %>
			<% else %>
			<%= button_to 'Login', login_path, :method => :create %>
			<% end %>
		</tr>
		<tr>
			<div id="klein">
				<%= link_to 'anmelden', new_user_path %>
			</div>
		</tr>
	</table>
</div>

