<%= form_for(@product) do |f| %>
<% if @product.errors.any? %>

<div id="error_explanation">
	<h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

	<ul>
		<% @product.errors.full_messages.each do |msg| %>
		<li>
			<%= msg %>
		</li>
		<% end %>
	</ul>
</div>
<% end %>

<div id="gross">
	<div class="field">
		<%= f.collection_select :brand_id, Brand.find(:all, :order => "name"), :id, :name,  { :prompt => 'Hersteller' } %>

	</div>
	<br />

	<div class="field">
		<%= f.collection_select :article_id, Article.find(:all, :order => "name"), :id, :name,  { :prompt => 'Artikel'} %>
	</div>
	<br />
	<div class="field">
		<%= f.label 'Größe:' %>
		<%= f.select :size_id,
      [
        ['XXXS',1],
        ['XXS',2],
        ['XS',3],
        ['S',4],
        ['M',5],
        ['L',6],
        ['XL',7],
        ['XXL',8],
        ['XXXL',9],

      ] %>
		<br />
		<br />
		<%= f.label 'Farbe:' %>
		<%= f.select :color_id,
      [
        ['blau',1],
        ['gelb',2],
        ['grün',3],
        ['rot',4],
        ['schwarz',5],
        ['weiss',6],
        ['orange',7],
      ] %>
	</div>

	<br />
	<div class="field">
		<%= f.label 'Beschreibung: ' %><br /> <%= f.text_area :description, :size=>"70x30" %>
	</div>
	
	<br />
	
	<div class="field">
		<%= f.label 'Preis:' %> <%= f.number_field :product_price %>
	</div>
</div>
<br />

<div class="actions">
	<%= f.submit %>
</div>
<br />
<% end %>

