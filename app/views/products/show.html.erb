<div id="brand_list">

	<h1>Produkt Information</h1>

	<p id="gross">

		<b>Hersteller: </b><%= @product.brand.name %>
		<br />
		<b>Typ: </b><%= @product.article.name %> (<%= @product.article.gender %>)
		<br />
		<b>Größe:</b> <%= @product.size.name %>
		<br />
		<b>Farbe:</b> <%= @product.color.name %>
		<br />
		<b>Preis:</b> <%= number_to_currency(@product.product_price, :unit=>'€ ') %>
		<br />

	</p>
	<p id="klein">
		<%= link_to 'editiere', edit_product_path(@product) %> |
		<%= link_to 'zurück', products_path %>
	</p>
</div>
