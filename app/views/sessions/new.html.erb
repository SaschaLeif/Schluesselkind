<% if flash[:alert] %>
<p id="notice">
	<%= flash[:alert] %>
</p>
<% end %>

<h1>Login-Bereich</h1>

<div id="gross">
	<%= form_tag do %>
	<fieldset>
		<legend>
			Bitte logge dich ein:
		</legend>
		<div>
			<label>Name:</label>
			<%= text_field_tag :name, params[:name] %>
		</div>
		<div>
			<label>Passwort:</label>
			<%= password_field_tag :password, params[:password] %>
		</div>
		<div>
			<%= submit_tag "Login" %>
		</div>
	</fieldset>
	<% end %>
</div>
