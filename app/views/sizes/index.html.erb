<div id="brand_list">
	<h1>erhältliche Grössen</h1>

	<table>

		<% @sizes.each do |size| %>
		<tr >
			<td class="list_description"><%= size.name %></td>
			<td class="list_actions"><%= link_to 'zeige', size %>
			<%= link_to 'editiere', edit_size_path(size) %>
			<%= link_to 'lösche', size, confirm: 'Are you sure?', method: :delete %></td>
		</tr>
		<% end %>
	</table>

	<br />

	<%= link_to 'neue Grösse hinzufügen', new_size_path %>
</div>
